.container.marketing
  .row
    .col-md-1
    .col-md-10
      %form{ :id => "contactForm", :method => "post",  :action => "contact" }
        .form-group
          %input.form-control{ :id => "name", "name" => "name", "type" => "text", "placeholder" => "Name" }
        .form-group
          %input.form-control{ :id => "email", "name" => "email", "type" => "text", "placeholder" => "Email address" }
        .form-group
          %textarea.form-control{ :id => "message", "name" => "message", "placeholder" => "Your Message", "rows" => "5" }
        .form-group
          %button.btn.btn-primary{ :id => "contact-submit", :type => "submit" }
            Send
  .row
    .col-md-1
    .col-md-10
      %div= haml :footer

%script{ :src => "../js/jquery-1.10.2.min.js" }
%script{ :src => "../js/jquery.validate.min.js" }
%script{ :src => "../js/additional-methods.min.js" } 

%script{ :type => "text/javascript" }
  :plain 
    $("#contactForm").validate({
      rules: { 
        name: { 
          required: true
        },
        email: {
          required: true,
          email: true
        },
        message: { 
          required: true
        }
      }
    })
