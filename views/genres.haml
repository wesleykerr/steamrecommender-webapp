.container.marketing
  .row
    .col-md-1
    .col-md-10
      %center
        %h2 Genres
      %table{:class => 'table'}
        - @genres.each do |genre|
          %tr
            %td 
              %a{ :href => "genres/#{genre.id}" }= genre.id
            %td
              %a{ :href => "genres/#{genre.id}" }= genre.name
      .flickr_pagination
        = will_paginate @genres, :container => false
      %hr

  .row
    .col-md-1
    .col-md-10
      %div= haml :footer
