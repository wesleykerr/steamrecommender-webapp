:css
  .table td.recomms { 
    text-align: center;
  }
  .table th.recomms, .table td.recomms { 
    border-top: none;
  }
.container
  .row
    .col-md-1
    .col-md-10
      %center
        %h2 Recommendations
      %table{:class => 'table table-condensed'}
        %thead
          %td.recomms
            %h3 Should Play
          %td.recomms
            %h3 Should Buy
        - @recomms.each do |e_game,n_game|
          %tr
            %td.recomms
              %a{ :href => "games/#{e_game['appid']}" }= @games_map[e_game['appid']].title
              %br
              %a{ :href => @games_map[e_game['appid']].steam_url }
                %img{:src => @games_map[e_game['appid']].steam_img_url, :width=>'150px'}
              %br 
              %a{ :href => "games/#{e_game['appid']}" }= e_game['score']
            %td.recomms
              %a{ :href => "games/#{n_game['appid']}" }= @games_map[n_game['appid']].title
              %br
              %a{ :href => @games_map[n_game['appid']].steam_url }
                %img{:src => @games_map[n_game['appid']].steam_img_url, :width=>'150px'}
              %br 
              %a{ :href => "games/#{n_game['appid']}" }= n_game['score']

      %hr
  .row
    .col-md-1
    .col-md-10
      :erb
        <script type="text/javascript"><!-- 
        google_ad_client = "ca-pub-5053630439831931"; 
        /* Games */ 
        google_ad_slot = "6861504808"; 
        google_ad_width = 728; 
        google_ad_height = 90; 
        //-->
        </script>
        <script type="text/javascript"
        src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
        </script>
  .row
    .col-md-1
    .col-md-10
      %div= haml :footer

    
