.container.marketing
  .row
    .col-md-1
    .col-md-10
      %center
        %h2= @genre.name
      %center
        .row
          .col-md-7
          .col-md-2{ :title => "Sort by total playtime" }
            %a{ :href => "#{@genre.id}?order=total_playtime" }
              %strong All Time
          .col-md-2{ :title => "Sort by recent playtime" }
            %a{ :href => "#{@genre.id}?order=recent_playtime" }
              %strong Recent
      .row
        .col-md-2
        .col-md-5.text-center
          %strong Title
        .col-md-1.text-right{ :title => "Sort by total playtime" }
          %a{ :href => "#{@genre.id}?order=total_playtime" }
            %strong Total
        .col-md-1.text-right{ :title => "Sort by the total average playtime" }
          %a{ :href => "#{@genre.id}?order=total_median" }
            %strong Median
        .col-md-1.text-right{ :title => "Sort by recent playtime" }
          %a{ :href => "#{@genre.id}?order=recent_playtime" }
            %strong Total
        .col-md-1.text-right{ :title => "Sort by recent average playtime" }
          %a{ :href => "#{@genre.id}?order=recent_median" }
            %strong Median
      - @games.each do |game|
        .row
          .col-md-2
            %a{ :href => "../games/#{game.appid}" }
              %img{ :src => "#{game.steam_img_url}", :width => '150px' }
            %br
          .col-md-5
            %a{ :href => "../games/#{game.appid}" }= game.title
          .col-md-1.text-right
            = '%.0f' % game.total_playtime if game.total_playtime
          .col-md-1.text-right
            = '%.0f' % game.total_median if game.total_median
          .col-md-1.text-right
            = '%.0f' % game.recent_playtime if game.recent_playtime
          .col-md-1.text-right
            = '%.0f' % game.recent_median if game.recent_median
        %hr

      .flickr_pagination
        = will_paginate @games, :container => false
      %hr

  .row
    .col-md-1
    .col-md-10
      %div= haml :footer
